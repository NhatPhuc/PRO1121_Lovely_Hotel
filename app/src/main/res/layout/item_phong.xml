<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="8dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        >
        <TextView
            android:id="@+id/item_phong_ten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Tên phòng"
            android:textSize="30dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/item_phong_loaiphong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loại phòng"
            android:layout_marginLeft="10dp"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/item_phong_giaphong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Giá phòng"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/item_phong_trangthai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Trạng thái phòng"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/id_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_delete"
            android:layout_gravity="right"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>