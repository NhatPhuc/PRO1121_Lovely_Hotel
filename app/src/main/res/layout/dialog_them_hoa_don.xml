<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#80deea"
            android:text="hóa đơn"
            android:textStyle="bold"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="@color/white"
            />
        <Spinner
            android:id="@+id/sp_manager"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            />
        <Spinner
            android:id="@+id/sp_guest"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            />
        <Spinner
            android:id="@+id/sp_room"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            />
        <Spinner
            android:id="@+id/sp_status"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ed_startdate"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="ngày nhận phòng"
                app:errorEnabled="true"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    ></com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_calendar_month_24"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ed_enddate"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="ngày nhận phòng"
                app:errorEnabled="true"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    ></com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_calendar_month_24"
                />
        </LinearLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ed_tong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="tổng"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="50dp">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Button
                android:id="@+id/btn_themhd"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="thêm"
                android:textStyle="bold"
                android:backgroundTint="#80deea"
                android:textSize="20dp"
                android:layout_gravity="left"
                />
            <Button
                android:id="@+id/btn_huyhd"
                android:layout_marginLeft="20dp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="hủy"
                android:backgroundTint="@color/dark_gray"
                android:textStyle="bold"
                android:textSize="20dp"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>