<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/hddv_tv_ngay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày đặt dịch vụ"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/hddv_tv_phong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên phòng yêu cầu dịch vụ"
            android:textSize="18dp"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/hddv_tv_loai_dv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại dịch vụ"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/hddv_tv_so_luong_dv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng dịch vụ " />
        </LinearLayout>

        <TextView
            android:id="@+id/hddv_tv_tong_tien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền "
            android:textSize="15dp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>
